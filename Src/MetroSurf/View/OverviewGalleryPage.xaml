<common:MvvmPage
    x:Class="VPN.View.OverviewGalleryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VPN.View"
    xmlns:common="using:MetroLab.Common" >
    <Grid x:Name="LayoutRoot">
        <FlipView x:Name="InnerFlipView" SelectionChanged="InnerFlipView_OnSelectionChanged">
            <!-- Items will be bound by ViewModel -->
            <FlipViewItem>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
                    <Image Source="/Assets/Overview/img-quick-tour-1.png" Stretch="Uniform" Height="240"/>
                    <TextBlock Text="Quick tour - First" FontSize="20" Margin="0,12,0,0" TextAlignment="Center"/>
                    <TextBlock Text="Welcome to the app!" FontSize="14" Opacity="0.8" TextAlignment="Center"/>
                </StackPanel>
            </FlipViewItem>
            <FlipViewItem>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
                    <Image Source="/Assets/Overview/img-quick-tour-2.png" Stretch="Uniform" Height="240"/>
                    <TextBlock Text="Quick tour - Second" FontSize="20" Margin="0,12,0,0" TextAlignment="Center"/>
                    <TextBlock Text="Learn how to use features." FontSize="14" Opacity="0.8" TextAlignment="Center"/>
                </StackPanel>
            </FlipViewItem>
            <FlipViewItem>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
                    <Image Source="/Assets/Overview/img-quick-tour-3.png" Stretch="Uniform" Height="240"/>
                    <TextBlock Text="Quick tour - Third" FontSize="20" Margin="0,12,0,0" TextAlignment="Center"/>
                    <TextBlock Text="You're all set!" FontSize="14" Opacity="0.8" TextAlignment="Center"/>
                </StackPanel>
            </FlipViewItem>
        </FlipView>
        <Button Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Tapped="Next" Margin="12"/>
    </Grid>
</common:MvvmPage>