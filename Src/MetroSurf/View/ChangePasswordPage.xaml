<mlc:MvvmPage
    x:Class="VPN.View.ChangePasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mlc="using:MetroLab.Common">
    <Grid x:Name="LayoutRoot" Loaded="BasePage_Loaded">
        <StackPanel Spacing="12">
            <ProgressBar x:Name="ProgressBar" Visibility="Collapsed"/>
            <TextBox x:Name="LoginTextbox"/>
            <PasswordBox x:Name="OldPasswordBox" KeyUp="OldPasswordBoxOnKeyUp"/>
            <PasswordBox x:Name="NewPasswordBox" KeyUp="NewPasswordBoxOnKeyUp"/>
        </StackPanel>
    </Grid>
</mlc:MvvmPage>