<Page
    x:Class="MetroSurf_8._1.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="METROSURF" Margin="12,0" FontSize="20"/>
            <TextBlock Text="about app" Margin="9,-7,0,0" FontSize="28" FontWeight="SemiBold"/>
        </StackPanel>
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <StackPanel>
                <TextBlock Text="WARNING! This build is an early-alpha version of MetroSurf." TextWrapping="Wrap" FontSize="18" FontWeight="Bold" Margin="12,20,12,0"/>
                <TextBlock Text="MetroSurf is an experiment. Bugs are expected. Please report any issues you find to the MetroSurf developers." TextWrapping="Wrap" Margin="12,20,12,0"/>
                <TextBlock Text="Build number: 1.0.1" TextWrapping="Wrap" Margin="12,20,12,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>