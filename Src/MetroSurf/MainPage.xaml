<Page
    x:Class="MetroSurf_8._1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <WebView x:Name="LumiaBrowserX"
                 Grid.Row="0"
                 NavigationStarting="LumiaBrowserX_NavigationStarting"
                 NavigationCompleted="LumiaBrowserX_NavigationCompleted"/>
        <Grid Grid.Row="1" Height="72" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="AddressBar"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     Height="72"
                     FontSize="25"
                     Background="White"
                     BorderThickness="0"
                     Padding="12,0,12,0"
                     BorderBrush="Transparent"
                     Foreground="Black"
                     KeyDown="AddressBar_KeyDown"
                     Grid.ColumnSpan="2"
                     Margin="0,0,59,0"/>
            <Button x:Name="MenuButton"
                    Grid.Column="1"
                    Width="72"
                    Height="72"
                    Background="Black"
                    BorderThickness="0"
                    Click="MenuButton_Click"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Grid>
                    <Ellipse Width="6" Height="6" Fill="White" Margin="0,-18,0,0" VerticalAlignment="Center"/>
                    <Ellipse Width="6" Height="6" Fill="White" VerticalAlignment="Center"/>
                    <Ellipse Width="6" Height="6" Fill="White" Margin="0,18,0,0" VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>